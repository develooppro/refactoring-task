{
  "name": "develooppro/refactoring-task",
  "description": "Refactoring exercises in PHP",
  "license": ["MIT"],
  "require": {
    "php": ">=8.1",
    "ext-bcmath": "*",
    "krowinski/bcmath-extended": "^7.0",
    "symfony/dotenv": "^6.3",
    "guzzlehttp/guzzle": "^7.0",
    "monolog/monolog": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "*",
    "vimeo/psalm": "^4",
    "psalm/plugin-phpunit": "*",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  }
}
